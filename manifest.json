{
  	"manifest_version": 2,

  	"name": "Chromebird",
  	"description": "Twitter stuff on all the pages.",
  	"version": "0.2.1",

    "update_url": "https://github.com/quinnmax/chromebird",

  	"icons":{ 	
  		"128":"icons/twextension.png"
  	},
  			
  	"permissions":[
  		"tabs", "http://*/*", "https://*/*"
  	],
  
  	"background":{ 
  		"page":"background.html",
  		"persistent":true
  	},
  
  	"browser_action": {
		"default_icon": "icons/bird_off.png",
		"default_title": "Chromebird",
		"default_popup": "popup.html"
	}
}






